{
  "extends": [
    "@tsconfig/node22",
    "@tsconfig/strictest",
    "@suin/biome.json/tsconfig"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./js",
    "rootDir": "./ts",
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "types": ["node"]
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["ts/**/*.test.*", "ts/**/*.spec.*", "ts/**/__tests__/*"]
}
